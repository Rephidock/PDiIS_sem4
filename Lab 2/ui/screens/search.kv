#:import CenteredTextInput ui.components.centered_text_input.CenteredTextInput
#:import DataFieldInput ui.components.data_field_input.DataFieldInput


<SearchScreen@Screen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: '0dp'
        padding: ('5dp', '5dp', '5dp', '5dp')

        md_bg_color: app.theme_cls.bg_normal

        #Remove at
        Label:
            text: "Remove by position"
            bold: True
            halign: "left"
            size_hint: (1, None)
            height: '40dp'

        BoxLayout:
            orientation: "horizontal"

            CenteredTextInput:
                id: input_index

                size_hint: (None, 1)
                width: '198dp'

                multiline: False
                hint_text: "Entry No. (index)"


            Button:
                text: "Remove"
                on_press: app.event_handler.on_search_remove_at()

            Button:
                text: "Clear All"
                on_press: app.event_handler.on_search_clear()

        # Select filters
        Label:
            text: "Search filters"
            bold: True
            size_hint: (1, None)
            height: '40dp'

        DataFieldInput:
            id: data_field_faculty
            label_text: "Faculty:"
            label_width: '150dp'
            input_hint: "Faculty"
            show_dropdown: True
            show_checkbox: True

        DataFieldInput:
            id: data_field_department
            label_text: "Department:"
            label_width: '150dp'
            input_hint: "Department"
            show_dropdown: True
            show_checkbox: True

        DataFieldInput:
            id: data_field_name
            label_text: "Name:"
            label_width: '150dp'
            input_count: 3
            input_hints: ("Last name (surname)", "First name", "Middle name")
            show_checkbox: True

        DataFieldInput:
            id: data_field_title
            label_text: "Academic Title:"
            label_width: '150dp'
            input_hint: "Academic Title"
            show_dropdown: True
            show_checkbox: True

        DataFieldInput:
            id: data_field_degree
            label_text: "Scholastic Degree:"
            label_width: '150dp'
            input_hint: "Scholastic Degree"
            show_dropdown: True
            show_checkbox: True

        DataFieldInput:
            id: data_field_years
            label_text: "Experience Years:"
            label_width: '150dp'
            input_count: 2
            input_hints: ("Low bound", "High Bound")
            show_checkbox: True

        # Perform search or removal
        Label:
            text: "Perform search"
            bold: True
            halign: "left"
            size_hint: (1, None)
            height: '40dp'

        BoxLayout:
            orientation: "horizontal"

            Button:
                text: "Search and Explore"
                on_press: app.event_handler.on_search_search()

            Button:
                text: "Search and Remove"
                on_press: app.event_handler.on_search_remove_search()
